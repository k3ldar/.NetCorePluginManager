@Html.ValidationMessageFor(m => m.City)
</div>
</div>
}
@if (Model.ShowCounty)
{
<div class="row ac-row">
<div class="col-sm-12 col-md-4 col-lg-3">
@Html.LabelFor(m => m.County)
</div>
<div class="col-sm-12 col-md-5 col-lg-4">
@Html.TextBoxFor(m => m.County, new { @class = "form-control" })
@Html.ValidationMessageFor(m => m.County)
</div>
</div>
}
@if (Model.ShowPostcode)
{
<div class="row ac-row">
<div class="col-sm-12 col-md-4 col-lg-3">
@Html.LabelFor(m => m.Postcode)
</div>
<div class="col-sm-12 col-md-5 col-lg-4">
@Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
@Html.ValidationMessageFor(m => m.Postcode)
</div>
</div>
}
@if (Model.ShowCaptchaImage)
{
<div class="row ac-row">
<div class="col-sm-12 col-md-4 col-lg-3">
@Html.LabelFor(m => m.CaptchaText)
</div>
<div class="col-sm-12 col-md-5 col-lg-4">
@Html.TextBoxFor(m => m.CaptchaText, new { @class = "form-control" })
@Html.ValidationMessageFor(m => m.CaptchaText)
</div>
</div>
}
<div class="row ac-row">
<div class="col">
<input id="btnCreateAccount" class="btn btn-primary" type="submit" value="@Localizer[nameof(Languages.LanguageStrings.CreateAccount)]" />
</div>
</div>
}