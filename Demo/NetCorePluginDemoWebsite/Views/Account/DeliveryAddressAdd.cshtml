@model UserAccount.Plugin.Models.EditDeliveryAddressViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Add Delivery Address";
}

<div class="row">
    <div class="col">
        <h1>@Localizer[nameof(Languages.LanguageStrings.DeliveryAddressAdd)]</h1>
    </div>
</div>

<link rel="stylesheet" href="/css/Account.css" />

@using (Html.BeginForm("DeliveryAddressAdd", "Account", FormMethod.Post, new { id = "deliveryAddressAddForm" }))
{
    @Html.HiddenFor(m => m.ReturnUrl)
    <div class="row ac-row">
        <div class="col">
            @Html.ValidationSummary(true)
        </div>
    </div>
    <div class="row ac-row">
        <div class="col-sm-12 col-md-4 col-lg-3">
            @Html.LabelFor(m => m.Country)
        </div>
        <div class="col-sm-12 col-md-5 col-lg-4">
            @Html.DropDownListFor(m => m.Country, new SelectList(UserAccount.Plugin.Controllers.AccountController.Countries, "Code", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Country)
        </div>
    </div>

    @if (Model.ShowName)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
    }

    @if (Model.ShowAddressLine1)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.AddressLine1)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AddressLine1)
            </div>
        </div>
    }

    @if (Model.ShowAddressLine2)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.AddressLine2)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AddressLine2)
            </div>
        </div>
    }

    @if (Model.ShowAddressLine3)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.AddressLine3)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.AddressLine3, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AddressLine3)
            </div>
        </div>
    }

    @if (Model.ShowCity)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.City)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.City)
            </div>
        </div>
    }

    @if (Model.ShowCounty)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.County)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.County, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.County)
            </div>
        </div>
    }

    @if (Model.ShowPostcode)
    {
        <div class="row ac-row">
            <div class="col-sm-12 col-md-4 col-lg-3">
                @Html.LabelFor(m => m.Postcode)
            </div>
            <div class="col-sm-12 col-md-5 col-lg-4">
                @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Postcode)
            </div>
        </div>
    }
    <div class="row ac-row">
        <div class="col">
            <input id="btnAddDeliveryAddress" class="btn btn-primary" type="submit" value="@Localizer[nameof(Languages.LanguageStrings.Add)]" />
        </div>
    </div>
}


