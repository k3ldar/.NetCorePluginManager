@model HelpdeskPlugin.Models.FeedbackViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer[nameof(Languages.LanguageStrings.Feedback)];
}


<h2>@Localizer[nameof(Languages.LanguageStrings.Helpdesk)]</h2>

<link rel="stylesheet" href="/css/Helpdesk.css" />
<script src="~/js/helpdesk.js"></script>

<div class="row">
    <div class="col helpdeskContent">
        <p>@Localizer[nameof(Languages.LanguageStrings.HelpdeskFeedbackDescription)] @Html.ActionLink(Localizer[Languages.LanguageStrings.ClickHere].Value, nameof(HelpdeskPlugin.Controllers.HelpdeskController.LeaveFeedback), HelpdeskPlugin.Controllers.HelpdeskController.Name)</p>
    </div>

</div>

@foreach (var item in Model.Feedback)
{
    <div class="row">
        <div class="col helpdeskContent">
            <div class="feedback">
                <blockquote>
                    @item.Message
                    @{ if (!String.IsNullOrEmpty(item.Username))
                        {<cite> - @item.Username </cite>} }
                </blockquote>
            </div>
        </div>
    </div>
}

