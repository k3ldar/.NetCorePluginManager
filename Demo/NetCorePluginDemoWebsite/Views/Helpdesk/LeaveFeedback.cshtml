@model HelpdeskPlugin.Models.LeaveFeedbackViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
ViewData["Title"] = Localizer[nameof(Languages.LanguageStrings.LeaveFeedback)];
}
<link rel="stylesheet" href="/css/Helpdesk.css" />
<script src="~/js/helpdesk.js"></script>
<div class="row">
<div class="col">
<h1>@Localizer[nameof(Languages.LanguageStrings.LeaveFeedback)]</h1>
</div>
</div>
<div class="row">
<div class="col">
<div>@Html.ValidationSummary()</div>
</div>
</div>
<div class="row">
<div class="col">
<p>@Localizer[nameof(Languages.LanguageStrings.HelpdeskLeaveFeedbackDescription)]</p>
</div>
</div>
<div class="row">
<div class="col">
<p>@Localizer[nameof(Languages.LanguageStrings.NotSupportArea)] @Html.ActionLink(Localizer[Languages.LanguageStrings.SupportTicket].Value, nameof(HelpdeskPlugin.Controllers.HelpdeskController.SubmitTicket), HelpdeskPlugin.Controllers.HelpdeskController.Name)</p>
</div>
</div>
<div class="row">
<div class="col">
<p>@Localizer[nameof(Languages.LanguageStrings.AbridgedWarning)]</p>
</div>
</div>
@using (Html.BeginForm(nameof(HelpdeskPlugin.Controllers.HelpdeskController.LeaveFeedback), HelpdeskPlugin.Controllers.HelpdeskController.Name, FormMethod.Post))
{
<div class="row hd-row">
<div class="col">
@Html.LabelFor(m => m.Feedback)
</div>
</div>
<div class="row">
<div class="col col-sm-12">
@Html.ValidationMessageFor(m => m.Feedback)
</div>
</div>
<div class="row">
<div class="col col-sm-12 col-md-6 col-lg-5">
@Html.TextAreaFor(m => m.Feedback, new { @class = "form-control" })
</div>
</div>
<div class="row hd-row">
<div class="col">
<p>@Html.LabelFor(m => m.Name)</p>
</div>
</div>
<div class="row">
<div class="col">
@Html.ValidationMessageFor(m => m.Name)
</div>
</div>
<div class="row">
<div class="col col-sm-12 col-md-6 col-lg-5">
@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
</div>
</div>
<div class="row hd-row">
<div class="col">
@Html.LabelFor(m => m.CaptchaText)
</div>
</div>
<div class="row">
<div class="col">
@Html.ValidationMessageFor(m => m.CaptchaText)
</div>
</div>
<div class="row">
<div class="col-sm-12 col-md-6 col-lg-5">
@Html.TextBoxFor(m => m.CaptchaText, new { @class = "form-control" })
</div>
</div>
<div class="row hd-row">
<div class="col">
<img src="/Helpdesk/GetCaptchaImage/" style="max-width:250px;height:auto;" />
</div>
</div>
<div class="row hd-row">
<div class="col">
<input class="btn btn-primary" type="submit" value="@Localizer[nameof(Languages.LanguageStrings.Submit)]" />
</div>
</div>
}
