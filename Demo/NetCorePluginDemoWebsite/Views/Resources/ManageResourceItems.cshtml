@model Resources.Plugin.Models.ManageResourceItemModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<link rel="stylesheet" href="~/css/SystemAdmin.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/jquery-bootgrid/jquery.bootgrid.min.css" asp-append-version="true" />
<script src="~/lib/jquery-bootgrid/jquery.bootgrid.min.js"></script>
<div class="row">
<div class="col-sm-12">
<h2>@Localizer[nameof(Languages.LanguageStrings.ManageResourceItems)]</h2>
</div>
</div>
<div class="row">
<div class="col-sm-12">

<table id="grid-users" class="table table-condensed table-hover table-striped">
<thead>
<tr>
<th data-column-id="id" data-type="numeric" data-sortable="false" data-identifier="true">ID</th>

<th data-column-id="name">Name</th>
<th data-column-id="visible">Visible</th>
<th data-column-id="button" data-formatter="editButton" data-sortable="false"></th>
</tr>
</thead>
<tbody>
@foreach (var item in Model.ResourceItems)
{
<tr>
<td>@item.Id</td>
<td>@item.Name</td>
<td>@item.Approved</td>
<td><input type='button' class='btn' value='@Localizer[nameof(Languages.LanguageStrings.Edit)]' onclick="editResourceItem(@item.Id)" ;></td>
</tr>
}
</tbody>
</table>
</div>
</div>
<script src="/js/growl.js" type="text/javascript"></script>
<link href="/css/growl.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
$(document).ready(function () {
let growl = '@Model.GrowlMessage';
let header = '@Languages.LanguageStrings.EditCategory';
if (growl !== '')
$.growl.notice({ title: header, message: growl });
});
function editResourceItem(id) {
window.location = "/Resources/ResourceItemEdit/" + id + "/";
};
</script>