@model LoginPlugin.Models.ForgotPasswordViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Forgot Password";
}
<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<h2>@Localizer[nameof(Languages.LanguageStrings.ForgotPassword)]</h2>
<link rel="stylesheet" href="/css/login.css" />

<div>@Html.ValidationSummary(true)</div>


@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
    <div class="login-block">
        <p>@Languages.LanguageStrings.ForgotPasswordDescription</p>
    </div>
    <div class="login-block">
        <div class="login-row">
            @Html.LabelFor(m => m.Username)
        </div>
        <div class="login-row">
            @Html.TextBoxFor(m => m.Username) @Html.ValidationMessageFor(m => m.Username)
        </div>
    </div>
    <div class="login-block">
        <div class="login-row">
            @Html.LabelFor(m => m.CaptchaText)
        </div>
        <div class="login-row">
            <img src="/Login/GetCaptchaImage/" />
        </div>
        <div class="login-row">
            @Html.TextBoxFor(m => m.CaptchaText) @Html.ValidationMessageFor(m => m.CaptchaText)
        </div>
    </div>
    <div class="login-block">
        <input type="submit" value="@Localizer[nameof(Languages.LanguageStrings.RequestPassword)]" />
    </div>
}
